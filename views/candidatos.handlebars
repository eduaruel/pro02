<main class="lista-candidatos">
    <h2>Lista de Candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="grid candidatos caja2">
                <div class="caja">
                    <p class="etiqueta">Nombre</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">E-mail</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja3">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-azul" target="_blanck" >
                        Ver CV
                    </a>
                </div>
            </div>
        {{/each}}
    {{else}}

        <p>No hay Candidatos</p>

    {{/if}}
</main>